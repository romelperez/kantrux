{
  "name": "kantrux",
  "version": "1.0.0-alpha.9",
  "description": "Ultralight web UI library for building static components with JSX support",
  "keywords": [
    "ui",
    "library",
    "jsx",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/romelperez/kantrux.git"
  },
  "homepage": "https://github.com/romelperez/kantrux",
  "author": "Romel PÃ©rez (romelperez.com)",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "rimraf ./dist && babel ./src --out-dir ./dist --ignore \"./src/**/*.test.js\"",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test": "jest",
    "test-dev": "jest --watch",
    "test-ci": "npm run compile && npm run lint && npm run test",
    "changelog": "auto-changelog --output CHANGELOG.md --commit-limit false",
    "release": "npm run test-ci && npm publish",
    "contributors-add": "all-contributors add",
    "contributors-generate": "all-contributors generate"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "all-contributors-cli": "^6.17.2",
    "auto-changelog": "^2.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-extended": "^0.11.5",
    "rimraf": "^3.0.2"
  }
}
