{
  "extends": [
    "eslint:recommended",
    "prettier"
  ],

  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "browser": true
  },

  "plugins": [
    "prettier",
    "react"
  ],

  "rules": {
    "quotes": ["error", "single"],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2
  }
}
